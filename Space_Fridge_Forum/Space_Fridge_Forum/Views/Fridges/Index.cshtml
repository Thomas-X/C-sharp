@using Space_Fridge_Forum.Enums
@model IEnumerable<Space_Fridge_Forum.Models.Fridge>

@{
    ViewBag.Title = "Fridge(s)";
}

<h2>Your fridge(s)</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HexColor)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        @ReactHelpers.RenderComponent(Components.Fridge, new
        {
            color = item.HexColor,
        })
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HexColor)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.UserId}) |
                @Html.ActionLink("Details", "Details", new {id = item.UserId})
            </td>
        </tr>
    }
</table>
