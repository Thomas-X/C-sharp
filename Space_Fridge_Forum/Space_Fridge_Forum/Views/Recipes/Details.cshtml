@using Microsoft.AspNet.Identity
@model Space_Fridge_Forum.Models.Recipe

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Recipe</h4>
    <i><h5>by @Model.User.Email.Split('@')[0]</h5></i>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.People)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.People)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @foreach (var item in Model.Description.Split(new[] { Environment.NewLine }, StringSplitOptions.None))
            {
                @item
                <br />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd>
            @foreach (var item in Model.Ingredients)
            {
                <p>
                    @item.IngredientType.Type&thinsp;@item.Value@item.IngredientUnit.Unit
                </p>
            }
        </dd>

    </dl>
</div>
<p>
    @if (Model.User.Id == User.Identity.GetUserId())
    {
        @Html.ActionLink("Edit", "Edit", new {id = Model.Id}) 
        @Html.Raw("|")
    }
    @Html.ActionLink("Back to List", "Index")
</p>
